<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="pantrypals.profile.ProfileInfoFragment">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/AppTheme.TextAppearance.Black"
                android:textColor="@color/colorWhite"
                android:text="Preferences"
                android:textSize="@dimen/h3Size"/>

            <com.wefika.flowlayout.FlowLayout
                android:id="@+id/prefs_container"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="start|top"
                android:paddingTop="@dimen/padding"
                android:paddingBottom="@dimen/padding">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Loading..."
                    android:textSize="@dimen/h4Size"
                    android:paddingLeft="@dimen/padding"
                    android:paddingRight="@dimen/padding"
                    android:paddingTop="@dimen/smallPadding"
                    android:paddingBottom="@dimen/smallPadding"
                    android:background="@drawable/rounded_corner_pink"
                    android:textColor="@color/colorWhite"
                    />

            </com.wefika.flowlayout.FlowLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Restrictions"
                android:textSize="@dimen/h3Size"
                android:textAppearance="@style/AppTheme.TextAppearance.Black"
                android:textColor="@color/colorWhite"/>

            <com.wefika.flowlayout.FlowLayout
                android:id="@+id/restrictions_container"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="start|top"
                android:paddingTop="@dimen/padding"
                android:paddingBottom="@dimen/padding">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Loading..."
                    android:textSize="@dimen/h4Size"
                    android:paddingLeft="@dimen/padding"
                    android:paddingRight="@dimen/padding"
                    android:paddingTop="@dimen/smallPadding"
                    android:paddingBottom="@dimen/smallPadding"
                    android:background="@drawable/rounded_corner_pink"
                    android:textColor="@color/colorWhite"
                    />
            </com.wefika.flowlayout.FlowLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Groups"
                android:textSize="@dimen/h3Size"
                android:textAppearance="@style/AppTheme.TextAppearance.Black"
                android:textColor="@color/colorWhite"/>

            <com.wefika.flowlayout.FlowLayout
                android:id="@+id/groups_container"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="start|top"
                android:paddingTop="@dimen/padding"
                android:paddingBottom="@dimen/padding">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Loading..."
                    android:textSize="@dimen/h4Size"
                    android:paddingLeft="@dimen/padding"
                    android:paddingRight="@dimen/padding"
                    android:paddingTop="@dimen/smallPadding"
                    android:paddingBottom="@dimen/smallPadding"
                    android:background="@drawable/rounded_corner_pink"
                    android:textColor="@color/colorWhite"
                    />

            </com.wefika.flowlayout.FlowLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Joint Pantries"
                android:textSize="@dimen/h3Size"
                android:textAppearance="@style/AppTheme.TextAppearance.Black"
                android:textColor="@color/colorWhite"/>

            <com.wefika.flowlayout.FlowLayout
                android:id="@+id/joint_pantries_container"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="start|top"
                android:paddingTop="@dimen/padding"
                android:paddingBottom="@dimen/padding">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Loading..."
                    android:textSize="@dimen/h4Size"
                    android:paddingLeft="@dimen/padding"
                    android:paddingRight="@dimen/padding"
                    android:paddingTop="@dimen/smallPadding"
                    android:paddingBottom="@dimen/smallPadding"
                    android:background="@drawable/rounded_corner_pink"
                    android:textColor="@color/colorWhite"
                    />

            </com.wefika.flowlayout.FlowLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</FrameLayout>
